<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Action">

    <TextView
        android:id="@+id/edThing"
        android:layout_width="109dp"
        android:layout_height="49dp"
        android:layout_marginStart="28dp"
        android:text="THINGS"
        android:textSize="10pt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.051" />

    <TextView
        android:id="@+id/edScenes"
        android:layout_width="95dp"
        android:layout_height="43dp"
        android:layout_marginStart="32dp"
        android:text="SCENES"
        android:textSize="10pt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/edThing"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.05" />

    <TextView
        android:id="@+id/routine"
        android:layout_width="116dp"
        android:layout_height="46dp"
        android:layout_marginStart="20dp"
        android:text="ROUTINES"
        android:textSize="10pt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/edScenes"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.05" />

    <TextView
        android:id="@+id/edEnter"
        android:layout_width="193dp"
        android:layout_height="41dp"
        android:layout_marginStart="28dp"
        android:text="Enter your notification"
        android:textSize="8pt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edThing"
        app:layout_constraintVertical_bias="0.098" />

    <TextView
        android:id="@+id/edInput"
        android:layout_width="151dp"
        android:layout_height="38dp"
        android:layout_marginTop="64dp"
        android:text="text here..."
        android:textStyle="bold"
        android:textSize="8pt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/edEnter"
        app:layout_constraintTop_toBottomOf="@+id/routine"
        app:layout_constraintVertical_bias="0.0" />


</androidx.constraintlayout.widget.ConstraintLayout>